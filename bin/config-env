#!/usr/bin/env sh
# Usage: config-env
# Link files of dotfiles project in homedir
set -e

if [ "$1" = "--help" ]
then
    grep '^#/' <"$0" |
    cut -c4-
    exit 2
fi

# Assume dotfiles will be in ~/Code/dotfiles
for f in $HOME/Code/dotfiles/*
do
  [ -f "$f" -a "$f" != "README" ] && ln -sf $PWD/$f $HOME/.$f
done
[ -d $HOME/bin ]   || ln -sf $HOME/Code/dotfiles/bin  $HOME/bin
