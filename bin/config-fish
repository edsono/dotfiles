#!/usr/bin/env fish
# Usage: config-fish
# Configure fish shell.

# Install fisherman
curl -Lo ~/.config/fish/functions/fisher.fish --create-dirs https://git.io/fisher

# Install plugins
fisher install z g2 fzf pyenv pipenv
fisher install omf/theme-cmorrell.com

# Copy config file
mkdir -p $HOME/.config/fish
mkdir -p $HOME/.config/fish/conf.d
cp $HOME/Code/dotfiles/fish/config.fish $HOME/.config/fish
cp $HOME/Code/dotfiles/fish/000-env.fish $HOME/.config/conf.d
