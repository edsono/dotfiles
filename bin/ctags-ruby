#!/usr/bin/env sh
# Usage: ctags-ruby
# Build ruby ctags file in current directory. Requires
# exuberant ctags to be installed:
# http://ctags.sourceforge.net/
set -e
ctags -f tags                          \
    --recurse                          \
    --extra=+f                         \
    --links=yes                        \
    --tag-relative=yes                 \
    --totals=yes                       \
    --regex-ruby='/.*alias(_method)?[[:space:]]+:([[:alnum:]_=!?]+),?[[:space:]]+:([[:alnum:]_=!]+)/\\2/f/'
